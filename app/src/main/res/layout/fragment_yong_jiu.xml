                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/yuyin"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#3F51B5"
                    android:text="语音炸弹"
                    android:layout_toRightOf="@id/imageView6Id"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView7Id"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/shanchu2"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#3F51B5"
                    android:text="删除数据"
                    android:layout_toRightOf="@id/imageView7Id"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView8Id"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/a9"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
